@page
@model BulkyRazor.Pages.Categories.deleteModel
<form method="post">
	<input asp-for="Category.Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2>Delete category</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0" asp-for="Category.Name"></label>
			<input asp-for=Category.Name class="form-control" disabled>
		</div><div class="mb-3 row p-1">
			<label class="p-0" asp-for="Category.DisplayOrder"></label>
			<input asp-for="Category.DisplayOrder" class="form-control" disabled>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/Categories/Index" class="btn btn-outline-secondary form-control">Back To List</a>
			</div>
		</div>
	</div>
</form>

